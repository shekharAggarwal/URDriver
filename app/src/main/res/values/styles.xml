    <style name="ratingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/food_rating_bar_full</item>
        <item name="android:minHeight">100dip</item>
        <item name="android:maxHeight">100dip</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="BackArrow" parent="AppTheme">
        <item name="android:textColorSecondary">#000</item>
    </style>

    <style name="SwitchCompatTheme" >
        <item name="colorControlActivated">@color/yellow_back</item>
